{
  "name": "tipjar",
  "version": "1.0.0",
  "description": "Tip Jar",
  "main": "TipJar.html",
  "scripts": {
    "start": "npm run watch:all",
    "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'",
    "watch:scss": "onchange 'TipJar.scss' -- npm run scss",
    "scss": "node-sass TipJar.scss TipJar.css",
    "lite": "lite-server -c bs-config.json",
    "test": "mocha-phantomjs -p /usr/local/bin/phantomjs testrunner.html",
    "prebuild": "npm run clean",
    "build": "npm run copyfonts && npm run usemin",
    "clean": "rimraf site",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* site/fonts",
    "usemin": "usemin TipJar.html --htmlmin -d site -o site/TipJar.html && usemin error.html --htmlmin -d site -o site/error.html"
  },
  "author": "Blair Neumann",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "font-awesome": "^4.7.0"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "copyfiles": "^1.2.0",
    "cssmin": "^0.4.3",
    "htmlmin": "0.0.7",
    "lite-server": "^2.3.0",
    "mocha": "^3.4.2",
    "mocha-phantomjs": "^4.1.0",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1",
    "rimraf": "^2.6.1",
    "uglifyjs": "^2.4.11",
    "usemin-cli": "^0.5.1"
  }
}
