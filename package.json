{
  "name": "tipjar",
  "version": "1.0.0",
  "description": "Tip Jar",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'",
    "watch:scss": "onchange 'TipJar.scss' -- npm run scss",
    "scss": "node-sass TipJar.scss TipJar.css",
    "lite": "lite-server -c bs-config.json",
    "validate:all": "parallelshell 'npm run validate:html' 'npm run lint:dev' 'npm run lint:node' 'npm run lint:test'",
    "validate:html": "mocha test/validate.js",
    "lint:test": "eslint test/TipJarTest.js --fix --env mocha && eslint test/validate.js --fix --env mocha",
    "lint:dev": "eslint TipJar.js --fix --env browser --env jquery",
    "lint:node": "eslint TipJar.node.js --fix --env node",
    "test": "mocha-phantomjs -p /usr/local/bin/phantomjs testrunner.html",
    "prebuild": "npm run clean",
    "build": "parallelshell 'npm run copyfonts' 'npm run usemin'",
    "clean": "rimraf site",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* site/fonts",
    "usemin": "usemin index.html --htmlmin -d site -o site/index.html && usemin error.html --htmlmin -d site -o site/error.html",
    "predeploy": "npm run build",
    "deploy": "aws s3 rm s3://blairneumann-tipjar --recursive && aws s3 sync ./site s3://blairneumann-tipjar --acl public-read"
  },
  "author": "Blair Neumann",
  "license": "MIT",
  "devDependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "chai": "^4.1.0",
    "copyfiles": "^1.2.0",
    "cssmin": "^0.4.3",
    "eslint": "^4.3.0",
    "eslint-config-google": "^0.9.1",
    "font-awesome": "^4.7.0",
    "htmlmin": "0.0.7",
    "lite-server": "^2.3.0",
    "mocha": "^3.4.2",
    "mocha-phantomjs": "^4.1.0",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.8",
    "usemin-cli": "^0.5.1",
    "w3cjs": "^0.4.0"
  }
}
